<%= provide(:title, @user.name)%>
 <div class="row">
  <aside class="col-md-4">
   <section class="user_info">
    <h1>
     <%= gravatar_for @user %>
     <%= @user.name %>
    </h1>
   </section>
  </aside>
  <div class="col-md-8">
   <%= if @user.comments.any? %>
    <h3>Comments (<%= @user.comments.count %>)</h3>
    <ol class="comments">
     <%= render @comments %>
    </ol>
    <%= wll_paginate @comments %>
    <% end %>
   </div>
  </div>
<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
